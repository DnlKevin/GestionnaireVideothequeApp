@model GestionnaireVideothequeApp.Models.FILM

@{
    ViewBag.Title = "Supprimer un film";
}


<h3>Êtes-vous sûr(e) de vouloir supprimer ce film ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMFILM)
        </dd>

        <dt>
            Catégorie :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORIE)
        </dd>

        <dt>
            Réalisateur :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.REALISATEUR)
        </dd>

        <dt>
            Date de sortie :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATESORTIE)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste des films", "Index")
        </div>
    }
</div>
