@model GestionnaireVideothequeApp.Models.FILM

@{
    ViewBag.Title = "Details";
}

<h2>Détails à propos de : <h4>@Html.DisplayFor(model => model.NOMFILM)</h4> </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMFILM)
        </dd>

        <dt>
            Catégorie : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORIE)
        </dd>

        <dt>
            Réalisateur : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.REALISATEUR)
        </dd>

        <dt>
            Date de sortie : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATESORTIE)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editer", "Edit", new { id = Model.FILMID }) |
    @Html.ActionLink("Retour à la liste des films", "Index")
</p>
